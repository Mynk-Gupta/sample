<% provide(:title, 'Home') %>
		
		<title><%= yield(:title) %></title>
 <% if signed_in? %>
  <div class="row">
    <aside class="span4">
      <section>
        <%= render 'shared/user_info' %>
      </section>
      <section>
        <%= render 'shared/micropost_form' %>
      </section>
    </aside>
  </div>
  <div class="span8">
  	<h3>Microposts Feed</h3>
  	<%= render 'shared/feed' %>
  </div>
 <% else %>
<div class="centre hero-unit">
	<h1>Welcome to the First Page</h1>
		
	<h2>
		This is the home page for
		<a href="http://railstutorials.org/">Ruby On Rails</a>
		<br>sample application
	</h2>
	<%=link_to "sign up now",signup_path, class:"btn btn-large btn-primary"%>
</div>
<%=link_to image_tag("RubyOnRails.png",alt: "rails"),'http://rubyonrails.org/' %>
<%end%>

